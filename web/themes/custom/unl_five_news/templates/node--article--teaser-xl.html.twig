{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
    'dcf-grid-halves@md dcf-grid-full@sm dcf-bleed dcf-ai-center custom-background-color-dark-light',
  ]
%}
{{ attach_library('unl_five_news/article') }}

<article{{ attributes.addClass(classes) }}>
  <div class="custom-section-heading-padding custom-padding-color custom-section-heading-order">
    <hr class="custom-white-line dcf-mt-0">
    <a href="{{ url }}" class="dcf-txt-decor-none">
        <h2 style="color:white;">{{ label }}</h2>
    </a>
    <div class="dcf-mt-1 dcf-txt-left dcf-txt-xs dcf-uppercase unl-font-sans">
      <a class="dcf-txt-decor-none custom-arrow" href="{{ url }}" style="color: white;;">Read more</a>
    </div>
  </div>
  <div>
    <a href="{{ url }}">{{ content.field_article_lead_image }}{{ content.field_article_lead_media }}</a>
  </div>
</article>
