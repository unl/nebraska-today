          <div class="dcf-p-1">
            <h1 class="dcf-txt-h1 unl-cream">{{ label }}</h1>
            <div class="dcf-txt-sm unl-cream">{{ content.field_subtitle }}</div>
            <div class="unl-lightest-gray dcf-mt-1">{{ content.field_written_by }}</div>
            <div class="dcf-txt-sm unl-lightest-gray">{{ created }}</div>
          </div>
        </div>
        <div class="landing-section">{{ content.field_article_lead_media }}</div>
        <div class="custom-hide dcf-txt-sm dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ content.field_article_lead_cutline }}</div>
        <div class="custom-hide dcf-txt-2xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ credit }}</div>

      {% elseif content.field_article_title_placement.0['#markup'] == 'bottom_center' %}
        <div class="dcf-m-auto dcf-d-block unl-bg-darkest-gray dcf-p-1 dcf-z-2 dcf-title-hide dcf-title-bottom-center">
          <div class="dcf-p-1">
            <h1 class="dcf-txt-h1 unl-cream">{{ label }}</h1>
            <div class="dcf-txt-sm unl-cream">{{ content.field_subtitle }}</div>
            <div class="unl-lightest-gray dcf-mt-1">{{ content.field_written_by }}</div>
            <div class="dcf-txt-sm unl-lightest-gray">{{ created }}</div>
          </div>
        </div>
        <div class="landing-section">{{ content.field_article_lead_media }}</div>
        <div class="custom-hide dcf-txt-sm dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ content.field_article_lead_cutline }}</div>
        <div class="custom-hide dcf-txt-2xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ credit }}</div>

      {% else %}
        {# This is "Basic" or not defined. #}
        <div class="dcf-wrapper custom-main-page">
          <div class="dcf-basic-view">
            <div class="dcf-col-100% dcf-col-67%-start@sm dcf-col-75%-start@md">
              <div>{{ content.field_article_lead_media }}</div>
            </div>
            <div class="dcf-col-100% dcf-col-33%-end@sm dcf-col-25%-end@md">
              <hr class="custom-l-line dcf-mt-0 dcf-mb-1 dcf-basic-view-hr">
              <div class="dcf-txt-3xs custom-hide dcf-italic dcf-pr-5 dcf-mt-0 dcf-mb-1 custom-credit-text">
                {{ credit }}
              </div>
              <div class="dcf-txt-xs dcf-mb-6">
                {{ content.field_article_lead_cutline }}
              </div>
            </div>
          </div>
        </div>
      {% endif %}

    </div>
  </div>
  {% endif %}

  <div class="outer-content dcf-pb-7">
    <div class="inner-content outer-content-item1">
      <div class="dcf-news-column  dcf-pt-7 inner-content-item1 dcf-m-auto">
        <div class="unl-font-serif dcf-dropcap custom-first-paragraph-big-font">
          {{ content.body }}
          {{ content.field_gallery_images }}
          {{ content.field_media_and_card }}
        </div>
      </div>
      <div class="inner-content-item2 dcf-pt-7">
        <div class="dcf-sticky custom-pin-top">
