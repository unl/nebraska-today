          </div>
        </div>
        <div class="landing-section">{{ content.field_article_lead_media }}</div>
        <div class="custom-hide dcf-txt-sm dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ content.field_article_lead_cutline }}</div>
        <div class="custom-hide dcf-txt-2xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ credit }}</div>

      {% elseif content.field_article_title_placement.0['#markup'] == 'bottom_right' %}
        <div
            class="dcf-m-auto dcf-d-block unl-bg-darkest-gray dcf-p-1 dcf-title-hide dcf-z-2 dcf-txt-left dcf-title-bottom-right">
          <div class="dcf-p-1">
            <h1 class="dcf-txt-h1 unl-cream">{{ label }}</h1>
            <div class="dcf-txt-sm unl-cream">{{ content.field_subtitle }}</div>
            <div class="unl-lightest-gray dcf-mt-1">{{ content.field_written_by }}</div>
            <div class="dcf-txt-sm unl-lightest-gray">{{ created }}</div>
          </div>
        </div>
        <div class="landing-section">{{ content.field_article_lead_media }}</div>
