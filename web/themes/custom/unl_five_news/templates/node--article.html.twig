{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}
{{ attach_library('unl_five_news/article') }}

<script>
  window.addEventListener('inlineJSReady', function() {
    WDN.initializePlugin('font-serif');
  }, false);
</script>

<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    
    </footer>
  {% endif %}

  {% if content.field_article_lead_media.0 %}
  <div class="dcf-bleed">
    {% if content.field_article_title_placement.0['#markup'] == 'basic' %}
      {% set hero_class = 'hero-article-basic' %}
    {% else %}
      {% set hero_class = 'hero-article-full' %}
    {% endif %}
    <div class="dcf-relative dcf-mt-0 dcf-mb-0 dcf-mr-auto dcf-ml-auto {{ hero_class }}">

      {% if content.field_article_title_placement.0['#markup'] == 'center_left' %}
        <div class="dcf-m-auto dcf-d-block unl-bg-darkest-gray dcf-title-hide dcf-p-1 dcf-z-2 dcf-title-center-left">
          <div class="dcf-p-1">
            <h1 class="dcf-txt-h1 unl-cream">{{ label }}</h1>
            <div class="dcf-txt-md unl-lightest-gray">{{ content.field_subtitle }}</div>
            <div class="unl-lightest-gray dcf-mt-1">{{ content.field_written_by }}</div>
            <div class="dcf-txt-sm unl-lightest-gray">{{ created }}</div>
          </div>
        </div>
        <div class="landing-section">{{ content.field_article_lead_media }}</div>
        <div class="custom-hide dcf-txt-sm dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ content.field_article_lead_cutline }}</div>
        <div class="custom-hide dcf-txt-2xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ credit }}</div>

      {% elseif content.field_article_title_placement.0['#markup'] == 'bottom_left' %}
        <div class="dcf-m-auto dcf-d-block unl-bg-darkest-gray dcf-title-hide dcf-p-1 dcf-z-2 dcf-title-bottom-left">
          <div class="dcf-p-1">
            <h1 class="dcf-txt-h1 unl-cream">{{ label }}</h1>
            <div class="dcf-txt-sm unl-cream">{{ content.field_subtitle }}</div>
            <div class="unl-lightest-gray dcf-mt-1">{{ content.field_written_by }}</div>
            <div class="dcf-txt-sm unl-lightest-gray">{{ created }}</div>
          </div>
        </div>
        <div class="landing-section ">{{ content.field_article_lead_media }}</div>
        <div class="custom-hide dcf-txt-sm dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ content.field_article_lead_cutline }}</div>
        <div class="custom-hide dcf-txt-2xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1">{{ credit }}</div>

      {% elseif content.field_article_title_placement.0['#markup'] == 'center_right' %}
