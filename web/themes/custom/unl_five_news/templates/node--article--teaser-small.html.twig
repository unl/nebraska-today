{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
    'half-text-half-image-grid',
    'dcf-mb-4',
  ]
%}
{% set createdDate = node.getCreatedTime|date('F j, Y') %}

<article{{ attributes.addClass(classes) }}>
  <div>
    <a href="{{ url }}">
      {{ content.field_article_lead_image }}
      {{ content.field_article_lead_media }}
    </a>
  </div>
  <div>
    <h5 class="dcf-regular dcf-mb-0 dcf-txt-h5">
      <a href="{{ url }}">{{ label }}</a>
    </h5>
    <div class="dcf-d-flex dcf-pt-1 custom-before-in-text">
      <div>{{ createdDate }} <span class="custom-section-display">{{ content.field_section }}</span></div>
    </div>
  </div>
</article>
