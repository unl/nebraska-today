<table id="node-{{ node.id }}" border="0" cellpadding="0" cellspacing="0" width="100%" style="line-height:normal"{{ attributes }}>
  <tr>
    <td bgcolor="#434341" style="padding:0px 15px 0px 15px" class="unltoday-padding">
      <table align="center" border="0" cellpadding="0" cellspacing="0" width="620" class="responsive-table">
        <tbody>
        <tr>
          <td valign="middle">
            <table border="0" cellspacing="0" cellpadding="0" width="100%">
              <tbody>
              <tr>
                <td align="left" valign="top">
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tbody{{ content_attributes }}>

                      <tr>
                        <td align="left" valign="top" style="padding:15px 0 0 0;">{{ content.field_article_lead_image.0.field_image }}</td>
                      </tr>
                      <tr>
                        <td class="unltoday-head" align="left" style="font-size:26px;font-weight:600;font-family:Montserrat,Verdana,sans-serif;color:#ffffff;padding:10px 0 10px 0;"><a href="{{ url }}" style="color:#fffffe;text-decoration:none;">{{ label }}</a></td>
                      </tr>
                      {% if content.field_subtitle is not empty %}
                      <tr>
                        <td align="left" style="font-size:16px;text-transform:uppercase;font-family:Montserrat,Verdana,sans-serif;color:#ffffff;padding-bottom:6px">
                          {{ content.field_subtitle }}
                        </td>
                      </tr>
                      {% endif %}
                      <tr>
                        <td class="unltoday-body" valign="top" style="padding:0 0 15px 0;font-size:18px;line-height:26px;font-family:Georgia,serif;color:#ffffff">{{ content.body }}</td>
                      </tr>

                    </tbody>
                  </table>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
</table>
