<table id="node-{{ node.id }}" border="0" cellpadding="0" cellspacing="0" width="100%" style="line-height:normal"{{ attributes }}>
  <tr>
    <td bgcolor="#fefdfa" style="padding:0px 15px 0px 15px" class="unltoday-padding">
      <table align="center" border="0" cellpadding="0" cellspacing="0" width="620" class="responsive-table">
        <tbody>
        <tr>
          <td valign="middle">
            <table border="0" cellspacing="0" cellpadding="0" width="100%">
              <tbody>
              <tr>
                <td align="left" valign="top">
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tbody{{ content_attributes }}>

                      <tr>
                        <td colspan="2" class="unltoday-head" align="left" style="font-size:24px;font-family:Montserrat,Verdana,sans-serif;color:#d00000;padding:15px 0 8px 0;">
                          <a href="{{ url }}" style="color:#d00000;text-decoration:none;"><span style="color:#d00001;">{{ label }}</span></a>
                        </td>
                      </tr>
                      {% if content.field_subtitle is not empty %}
                      <tr>
                        <td colspan="2" align="left" style="font-size:19px;font-family:Montserrat,Verdana,sans-serif;color:#242423;padding-bottom:10px">
                          {{ content.field_subtitle }}
                        </td>
                      </tr>
                      {% endif %}
                      <tr>
                          <td class="unltoday-body" align="top" width="341" style="padding:0 0 12px 0;font-size:17px;line-height:25px;font-family:Georgia,serif;color:#242423">{{ content.body }}</td>
                          <td align="top" width="279" style="padding:0 0 12px 20px;margin:0">{{ content.field_article_lead_image.0.field_image }}</td>
                      </tr>

                    </tbody>
                  </table>
                </td>
              </tr>
              </tbody>
            </table>
          </td>
        </tr>
        </tbody>
      </table>
    </td>
  </tr>
</table>
