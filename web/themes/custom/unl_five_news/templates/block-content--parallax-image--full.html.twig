                <div class="dcf-p-1">
                    <h1 class ="dcf-txt-h1 unl-cream" >{{ node_title }}</h1>
                    <div class="dcf-txt-xs unl-cream">{{ content.field_cutline }}</div>
                </div>
            </div>
            <div class="landing-section">{{ content.field_image }}</div>
            <div class="ericterst dcf-txt-3xs dcf-italic dcf-txt-right dcf-pr-5 dcf-mb-0 dcf-mt-1"> {{ credit }}</div>  
        {% endif %}
</div>
</div> 